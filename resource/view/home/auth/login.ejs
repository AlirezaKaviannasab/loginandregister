<div class="row pt-3 justify-content-center">
      <div class="col-8">
        <div class="card card-default">
          <div class="card-header">
            <h5>ورود</h5>
          </div>
          <div class="card-body">
            <form action="/login" class="form-horizontal" role="form" method="post" novalidate>
              <%- include('./../layouts/error-messages')-%>
              <div class="form-group">
                <label for="email" class="control-label">آدرس ایمیل</label>
                <input id="email" type="email" class="form-control" name="email" value="" required autofocus="">
              </div>
              <div class="form-group">
                <label for="password" class="control-label">پسورد</label>
                <input id="password" type="password" class="form-control" name="password" required>
              </div>
              <div class="form-group">
                <div class="checkbox mt-3">
                  <input type="checkbox" name="remember">مرا به خاطر بسپار
                  <a href="#" class="btn btn-link">یادآوری پسورد</a>
                  <label>

                  </label>
                </div>
              </div>
              <div class="form-group mt-3">
                <%- recaptcha %>
              </div>
              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">ورود</button>
                <a href="/login/google" class="btn btn-danger">ورود با اکانت گوگل</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>